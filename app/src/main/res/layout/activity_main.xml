<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.paul.projetgsb.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choisir le protocole" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/editGlycemie" />

    <Button
        android:text="Malade à signaler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSignaler"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Ajouter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSignaler"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btnAjouter"
        android:visibility="invisible" />

    <TextView
        android:text="Saisir le prénom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPrenom"
        android:layout_above="@+id/btnAjouter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tVAfficherRes"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp"
        android:layout_alignBottom="@+id/btnAfficher"
        android:layout_toRightOf="@+id/btnAfficher" />

    <TextView
        android:text="Saisir la glycémie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_above="@+id/btnAfficher"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp" />

    <Button
        android:text="Afficher l'insuline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAfficher"
        android:layout_weight="1"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/btnSignaler"
        android:layout_alignEnd="@+id/btnSignaler" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editPrenom"
        android:layout_above="@+id/btnAjouter"
        android:layout_toEndOf="@+id/txtPrenom"
        android:layout_alignTop="@+id/txtPrenom"
        android:layout_alignLeft="@+id/editNom"
        android:layout_alignStart="@+id/editNom"
        android:visibility="invisible" />

    <TextView
        android:text="Saisir le nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TxtNom"
        android:layout_alignBaseline="@+id/editNom"
        android:layout_alignBottom="@+id/editNom"
        android:layout_alignRight="@+id/btnAjouter"
        android:layout_alignEnd="@+id/btnAjouter"
        android:visibility="invisible" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:text="Protocole 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdbProt1"
            android:layout_weight="1"
            android:layout_below="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp" />

        <RadioButton
            android:text="Protocole 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdbProt2"
            android:layout_weight="1"
            android:layout_marginBottom="28dp"
            android:layout_above="@+id/textView2"
            android:layout_alignRight="@+id/txtPrenom"
            android:layout_alignEnd="@+id/txtPrenom" />

    </RadioGroup>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editNom"
        android:layout_above="@+id/editPrenom"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible" />

</RelativeLayout>
